class Solution:
    def convertBST(self, root: TreeNode) -> TreeNode:
        self.currentsum = 0
        self.dfs(root)
        return root
    
    def dfs(self, root):
        if not root:
            return
        self.dfs(root.right)
        root.val += self.currentsum
        self.currentsum = root.val
        self.dfs(root.left)
