class Solution:
    def connect(self, root: 'Node') -> 'Node':
        ori = root
        while root and root.left:
            next = root.left
            while root:
                root.left.next = root.right
                if root.next:
                    root.right.next = root.next.left
                else:
                    root.right.next = None
                root = root.next
            root = next
        return ori
