class Solution:
    def findPeakElement(self, nums: List[int]) -> int:
        l = 0
        r = len(nums)-1
        
        while l < r-1:
            m = (r+l)//2
            if nums[m]>nums[m-1] and nums[m]>nums[m+1]:
                return m
            if nums[m+1]>nums[m]:
                l = m+1
            else:
                r = m
        
        if nums[r]>nums[l]:
            return r
        else:
            return l
