class Solution:
    def isPalindrome(self, head: ListNode) -> bool:
        fast = slow = head
        while fast and fast.next:
            slow = slow.next
            fast = fast.next.next
        
        newhead = None
        while slow:
            temp = slow.next
            slow.next = newhead
            newhead = slow
            slow = temp
        
        while newhead:
            if newhead.val != head.val:
                return False
            newhead = newhead.next
            head = head.next
        
        return True
